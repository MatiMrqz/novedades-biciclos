FROM node:lts-alpine AS runtime
WORKDIR /app

COPY . .

ARG SUPABASE_URL=${SUPABASE_URL}
ARG SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

ENV SUPABASE_URL=${SUPABASE_URL}
ENV SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

RUN npm install
RUN npm run build

ENV HOST=0.0.0.0
ENV PORT=4321


EXPOSE 4321

CMD node ./dist/server/entry.mjs