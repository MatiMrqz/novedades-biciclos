---
interface Props {
  title: string;
}
const { title } = Astro.props;
import '../styles/global.css'
import HeaderAuth from '../components/HeaderAuth.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-gradient-to-b from-gray-800 to-gray-900 min-h-screen">
		<HeaderAuth />
		<main class=" flex justify-center items-center w-screen h-full p-5">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html{
		color-scheme: dark light;
	}
</style>